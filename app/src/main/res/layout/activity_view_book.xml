<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".ViewBookActivity">

    <RelativeLayout
        android:background="@color/colorColumn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <View
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/chapter_back"
        android:background="@drawable/arrowleft"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtChapterName"
            android:text="NO PAGE NUMBER"
            android:textSize="24sp"
            android:layout_marginStart="50dp"
           android:layout_marginEnd="50dp"
            android:textStyle="bold"
            android:textColor="@color/ColorText"
            android:gravity="center_horizontal"
            android:layout_centerVertical="true"

            />

        <View
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:id="@+id/chapter_next"
            android:background="@drawable/arrowright"
            />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

    </android.support.v4.view.ViewPager>


</LinearLayout>